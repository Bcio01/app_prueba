<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_bg"
    tools:context=".ConfiguracionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título minimalista -->
        <TextView
            android:id="@+id/tvTituloConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/brand_primary"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tarjeta/config container -->
        <LinearLayout
            android:id="@+id/tarjetaConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloConfig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="520dp">

            <!-- Mantengo IDs originales -->
            <Switch
                android:id="@+id/swNotificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textColor="@color/text_main"
                android:layout_marginTop="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/text_dim" />

            <Switch
                android:id="@+id/swTemaOscuro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tema oscuro"
                android:textColor="@color/text_main" />

            <Button
                android:id="@+id/btnGuardarConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/brand_primary"
                android:text="Guardar"
                android:textColor="@color/on_primary"
                android:textStyle="bold"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <!-- Espaciado final para landscape -->
        <Space
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/tarjetaConfig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
