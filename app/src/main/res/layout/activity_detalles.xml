<?xml version="1.0" encoding="utf-8"?>
<!--
    Archivo de diseño para DetallesActivity.
    Muestra el título, ID, descripción y un botón para volver.
-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_bg"
    tools:context=".DetallesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Título del ítem"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/brand_primary"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!-- Muestra el nombre principal del ítem. -->

        <!-- ID -->
        <TextView
            android:id="@+id/tvIdDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID: #001"
            android:textSize="16sp"
            android:textColor="@color/text_dim"
            android:gravity="center"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloDetalle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!-- Muestra el identificador único del ítem. -->

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionDetalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descripción del ítem…"
            android:textSize="17sp"
            android:textColor="@color/text_main"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvIdDetalle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!-- Texto descriptivo o informativo sobre el ítem. -->

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/brand_primary"
            android:paddingHorizontal="32dp"
            android:paddingVertical="10dp"
            android:text="Volver al inicio"
            android:textColor="@color/on_primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcionDetalle" />
        <!-- Regresa a la pantalla anterior (HomeActivity). -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
