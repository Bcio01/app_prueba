<?xml version="1.0" encoding="utf-8"?>
<!--
    Archivo de diseño para la pantalla de configuración (ConfiguracionActivity).
    Permite activar notificaciones, cambiar tema y guardar los cambios.
-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_bg"
    tools:context=".ConfiguracionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Configuración"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/brand_primary"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!--
            Muestra el título de la pantalla, centrado en la parte superior.
        -->

        <!-- Tarjeta de configuración -->
        <LinearLayout
            android:id="@+id/tarjetaConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloConfig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="520dp">

            <!-- Switch: notificaciones -->
            <Switch
                android:id="@+id/swNotificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textColor="@color/text_main"
                android:layout_marginTop="4dp" />
            <!-- Activa o desactiva notificaciones. -->

            <!-- Línea divisora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/text_dim" />

            <!-- Switch: tema oscuro -->
            <Switch
                android:id="@+id/swTemaOscuro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tema oscuro"
                android:textColor="@color/text_main" />
            <!-- Cambia entre modo claro y oscuro. -->

            <!-- Botón guardar -->
            <Button
                android:id="@+id/btnGuardarConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/brand_primary"
                android:text="Guardar"
                android:textColor="@color/on_primary"
                android:textStyle="bold"
                android:paddingVertical="12dp" />
            <!-- Guarda las configuraciones seleccionadas. -->

        </LinearLayout>
        <!-- Botón volver -->
        <Button
            android:id="@+id/btnVolverHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/brand_primary"
            android:paddingHorizontal="32dp"
            android:paddingVertical="10dp"
            android:text="Volver al inicio"
            android:textColor="@color/on_primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Espaciado inferior -->
        <Space
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/tarjetaConfig"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
