<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_bg"
    tools:context=".AyudaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloAyuda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ayuda / Preguntas Frecuentes"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/brand_primary"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contenido de ayuda -->
        <LinearLayout
            android:id="@+id/contenidoAyuda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloAyuda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Sección inicio de sesión -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔐 Iniciar sesión"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_main"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para ingresar, escribe tu correo y contraseña válidos y presiona **Iniciar sesión**. Si los datos son correctos, entrarás al menú principal."
                android:textColor="@color/text_dim"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Sección configuración -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚙️ Configuración"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_main"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En **Configuración**, puedes activar o desactivar las notificaciones y cambiar entre el modo **oscuro o claro**. Los cambios se guardan automáticamente."
                android:textColor="@color/text_dim"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Sección compartir -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📤 Compartir y correo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_main"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usa los botones del menú principal para **compartir texto**, **enviar correos** o **abrir enlaces** fácilmente. Estas acciones utilizan las apps predeterminadas de tu dispositivo."
                android:textColor="@color/text_dim"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Sección mapas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🗺️ Mapas y teléfono"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_main"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desde el menú principal también puedes abrir una ubicación en **Google Maps** o marcar un número de teléfono con un solo toque."
                android:textColor="@color/text_dim"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp"/>

            <!-- Sección final -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ℹ️ Consejos"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_main"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Guarda los cambios en configuración antes de salir.\n• Asegúrate de permitir los permisos de cámara y almacenamiento.\n• Si algo no responde, cierra y vuelve a abrir la aplicación.\n• Puedes cambiar entre orientación vertical y horizontal libremente."
                android:textColor="@color/text_dim"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Botón volver al inicio -->
        <Button
            android:id="@+id/btnVolverHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al inicio"
            android:textColor="@color/on_primary"
            android:backgroundTint="@color/brand_primary"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="12dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/contenidoAyuda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
