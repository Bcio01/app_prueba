<?xml version="1.0" encoding="utf-8"?>
<!--
    Este archivo define el dise침o principal de la pantalla HomeActivity.
    Usa un CoordinatorLayout como contenedor ra칤z y Material Design para la barra superior.
    Los botones est치n organizados en una cuadr칤cula (GridLayout) con estilo moderno.
-->

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".HomeActivity">

    <!-- ===================================================== -->
    <!--                BARRA SUPERIOR (TOOLBAR)               -->
    <!-- ===================================================== -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <!--
            AppBarLayout contiene la barra superior.
            Sirve para colocar una Toolbar o un t칤tulo.
            La propiedad "elevation" define la sombra bajo la barra (0dp = sin sombra).
        -->

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/brand_primary"
            android:title="Inicio"
            android:titleTextColor="@color/on_primary"
            app:titleCentered="true"/>
        <!--
            MaterialToolbar es la barra superior moderna de Material Design.
            Muestra el t칤tulo centrado "Inicio" con color blanco y fondo personalizado.
        -->
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ===================================================== -->
    <!--             CONTENIDO PRINCIPAL SCROLLABLE            -->
    <!-- ===================================================== -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="24dp">

        <!--
            NestedScrollView permite desplazamiento del contenido (scroll).
            Ideal cuando hay muchos botones o textos.
            El padding (24dp) da espacio alrededor de todo el contenido.
        -->

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!--
                LinearLayout organiza los elementos en una sola columna vertical.
                Los elementos dentro estar치n centrados horizontalmente.
            -->

            <!-- ===================================================== -->
            <!--                  TEXTO DE BIENVENIDA                 -->
            <!-- ===================================================== -->
            <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido 游녦"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_main"
                android:layout_marginBottom="24dp"/>
            <!--
                Muestra el saludo principal al usuario.
                El tama침o 22sp lo hace m치s grande y legible.
                El margen inferior separa el texto de los botones.
            -->

            <!-- ===================================================== -->
            <!--                   SECCI칍N DE BOTONES                 -->
            <!-- ===================================================== -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:columnOrderPreserved="false">

                <!--
                    GridLayout permite organizar botones en varias columnas.
                    columnCount="2" crea dos columnas.
                    useDefaultMargins agrega espacio autom치tico entre botones.
                -->

                <!-- Bot칩n: Ir al perfil -->
                <Button
                    android:id="@+id/btnIrPerfil"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Perfil"/>
                <!--
                    Abre la pantalla PerfilActivity.
                    Usa el estilo MaterialComponents con fondo del color principal.
                -->

                <!-- Bot칩n: Abrir sitio web -->
                <Button
                    android:id="@+id/btnAbrirWeb"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Sitio web"/>
                <!--
                    Abre una p치gina web (Minecraft o cualquier URL definida).
                -->

                <!-- Bot칩n: Enviar correo o SMS -->
                <Button
                    android:id="@+id/btnEnviarCorreo"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Correo"/>
                <!--
                    Abre la app de mensajes para enviar un SMS.
                -->

                <!-- Bot칩n: Compartir texto -->
                <Button
                    android:id="@+id/btnCompartir"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Compartir"/>
                <!--
                    Comparte texto usando otras apps como WhatsApp o Gmail.
                -->

                <!-- Bot칩n: Linterna -->
                <Button
                    android:id="@+id/btnLinterna"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Linterna"/>
                <!--
                    Enciende o apaga la linterna del tel칠fono.
                    Usa permisos de c치mara para funcionar correctamente.
                -->

                <!-- Bot칩n: Abrir c치mara -->
                <Button
                    android:id="@+id/btnCamara"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="C치mara"/>
                <!--
                    Abre la pantalla de c치mara (CamaraActivity) para tomar fotos o grabar.
                -->

                <!-- Bot칩n: Marcar tel칠fono -->
                <Button
                    android:id="@+id/btnMarcarTelefono"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Tel칠fono"/>
                <!--
                    Abre el marcador del tel칠fono con un n칰mero ya preparado.
                -->

                <!-- Bot칩n: Seleccionar imagen de galer칤a -->
                <Button
                    android:id="@+id/btnSeleccionarImagen"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Galer칤a"/>
                <!--
                    Abre la galer칤a del dispositivo para seleccionar una imagen.
                -->

                <!-- Bot칩n: Abrir ubicaci칩n en Google Maps -->
                <Button
                    android:id="@+id/btnAbrirMaps"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Maps"/>
                <!--
                    Abre Google Maps mostrando una ubicaci칩n espec칤fica.
                    Si no hay app de mapas, abre el navegador con la URL.
                -->

                <!-- Bot칩n: Configuraci칩n -->
                <Button
                    android:id="@+id/btnAbrirConfiguracion"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Configuraci칩n"/>
                <!--
                    Abre la pantalla ConfiguracionActivity.
                    Permite cambiar temas o preferencias del usuario.
                -->

                <!-- Bot칩n: Ver detalles -->
                <Button
                    android:id="@+id/btnVerDetalles"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Detalles"/>
                <!--
                    Abre DetallesActivity y env칤a datos de ejemplo (id, t칤tulo, etc.).
                -->

                <!-- Bot칩n: Ayuda -->
                <Button
                    android:id="@+id/btnAbrirAyuda"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:backgroundTint="@color/brand_primary"
                    android:textColor="@color/on_primary"
                    android:text="Ayuda"/>
                <!--
                    Abre AyudaActivity, que explica c칩mo usar la aplicaci칩n.
                    Puede contener preguntas frecuentes o tutoriales.
                -->
            </GridLayout>
            <!-- Fin de la cuadr칤cula de botones -->
        </LinearLayout>
        <!-- Fin del contenedor vertical -->
    </androidx.core.widget.NestedScrollView>
    <!-- Fin del contenido desplazable -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!-- Fin del dise침o principal de la pantalla Home -->
